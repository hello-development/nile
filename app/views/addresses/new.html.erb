<div  class="container">
  	<div class="row">
    	<h1  class="artist_edit_headline">住所の登録</h1>
    	<div  class="box2">
			<% if @address.errors.any? %>
  				<div id="error_explanation" class="alert alert-danger">
    				<ul>
      				<% @address.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
      				<% end %>
    				</ul>
  				</div>
			<% end %>
			<span class="alert-danger"><%= notice %></span><br>
			新規会員登録(下記を入力して下さい)
			<%= form_for [current_user, @address], url: user_addresses_path do |f| %>
				郵便番号(半角ハイフン無し)<br>
				<%= f.text_field :postal_code %><br>
				住所<br>
				<%= f.text_field :address %><br>
				<%= f.submit "上記の内容で登録する" %>
			<% end %>
    	</div>
  	</div>
</div>