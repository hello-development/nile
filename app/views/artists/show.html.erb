<div class='box'>
	<div class='row'>
		<div  class="col-md-8 col-sm-8">
			<% if flash[:notice] %>
			<p class="notice"><%= flash[:notice] %></p>
			<% end %>
				<h1> <%= @artist.artist_name %></h1>
				<div  class="artist_tag_box">
					<span  class="artist_tag">
						<% @genres.each do |genre| %><% if @artist.genre_id == genre.id %><%= genre.genre_name %><% end %><% end %>
					</span>
					<span  class="artist_tag">
						<% @labels.each do |label| %><% if @artist.label_id == label.id %><%= label.label_name %><% end %><% end %>
					</span>
				</div>
				<div  class="clearfix">
					<%= attachment_image_tag @artist, :artist_image, :fill, 250, 250, format: 'jpeg', class: "artist_show_image" %>
					<h3  class="artist_profile">・プロフィール</h3>
					<div  class="artist_contents_box">
						<p  class="artist_contents"><%= @artist.artist_contents %></p>
					</div>
					<%= link_to edit_artist_path(@artist.id) do %>
					<button class="btn btn-default btn-success artist_button">このアーティストを編集する</button>
					<% end %>
					<%= link_to artist_path(@artist.id), method: :delete,"data-confirm" => "本当に削除しますか？" do %>
					<button class="btn btn-default btn-danger artist_button">このアーティストを削除する</button>
					<% end %>
				</div>
			<!-- ユーザーがログインしているか -->
			<% if user_signed_in? %>
			<!-- ユーザーの持っているアーティストIDとアーティストIDと同じ時 -->
				<% if current_user.artist_id == @artist.id %>
					<%= link_to user_path(@artist.id), method: :patch, "data-confirm" => "本当に解除しますか？" do %>
					<button type="button" class="btn btn-danger btn-sm favorite_button">このアーティストのお気に入りを解除する</button>
					<% end %>
			<!-- ユーザーがアーティストIDを持っていない時 -->
				<% elsif current_user.artist_id == nil %>
					<%= link_to user_path(@artist.id), method: :patch do %>
					<button type="button" class="btn btn-primary btn-sm favorite_button">このアーティストをお気に入り登録する</button>
					<% end %>
			<!-- ユーザーがアーティストIDを持っているが登録したいアーティストIDと違う時 -->
				<% else %>
					<%= link_to user_path(@artist.id), method: :patch, "data-confirm" => "お気に入りは１つのみ登録できます。このアーティストに変更しますか？" do %>
					<button type="button" class="btn btn-primary btn-sm favorite_button">このアーティストをお気に入り登録する</button>
					<% end %>
				<% end %>
			<% end %>
		</div>
		<div class='col-md-4 col-sm-4'>
			<h3><%= @artist.artist_name %></h3>
			<h3>CDいいねランキング</h3>
			<table  class="table-hover table">
				<tbody>
					<tr>
						<td>１</td>
						<td><%= image_tag('no_image50x50.jpg') %></td>
						<td>アーティスト名</td>
						<td><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>111</td>
						<td>ジャンル</td>
						<td>レーベル</td>
					</tr>
					<tr>
						<td>２</td>
						<td><%= image_tag('no_image50x50.jpg') %></td>
						<td>アーティスト名</td>
						<td><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>99</td>
						<td>ジャンル</td>
						<td>レーベル</td>
					</tr>
					<tr>
						<td>３</td>
						<td><%= image_tag('no_image50x50.jpg') %></td>
						<td>アーティスト名</td>
						<td><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>88</td>
						<td>ジャンル</td>
						<td>レーベル</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>