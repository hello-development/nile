<!DOCTYPE html>
<html>
  <head>
    <title>NILE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="message"> <%= flash[:notice] %> </div>

    <div class="users_show_upper clearfix" >

    <div class="users_show_left">
      <h4 class="users_names"> <strong> ユーザー名 </strong> </h4>
      <div> <%= @user.last_name %> <%= @user.first_name %> さん </div>
      <div> <%= link_to "編集", edit_user_path, class: 'btn btn-success' %> </div>
      <div> <%= link_to "退会", user_path, class: 'btn btn-danger', method: :'delete', "data-confirm" => "本当に退会しますか？" %> </div>
    </div>

    <div class="users_show_right">
    <h4 class="favorite_artists"> <strong> お気に入りアーティスト </strong> </h4>
    <div> <%#= @user.artist.artist_name %> </div>
    <div> <%#= @user.artist.artist_image %> </div>
    <div> <strong> 最新のCD </strong> </div>
    <div> <%#= @user.artist.artist_image %> </div>
    <div> <%#= @user.item.item_name %> </div>
    <div> <%#= @user.genre.genre_name %> </div>
    <div> ￥ <%#= @user.item.price %> </div>

    </div>

    <div class="mypage_upperright_right">
    <h4 class="favorite_ranking"> <strong> いいねランキング </strong> </h4>
    <table>
      <%# @artists.each do |artist| %>
      <tbody>
        <tr>
          <div> <%#= @artist.artist_image %> </div>
          <div> <%#= @item.item_name %> </div>
          <div> カートに入れる </div>
        </tr>
        <tr>
          <div> <%#= @artist.artist_image %> </div>
          <div> <%#= @item.item_name %> </div>
          <div> カートに入れる </div>
        </tr>
        <tr>
          <div> <%#= @artist.artist_image %> </div>
          <div> <%#= @item.item_name %> </div>
          <div> カートに入れる </div>
        </tr>
      </tbody>

    </table>
    </div>

    </div>

<div class="users_show_bottom">
<div class="purchase_histories"> 購入履歴 </div>
<div>　月　日購入▼</div>
</div>

  </body>

  </html>