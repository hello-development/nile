<div class="users_signup">

<h4><strong> 新規会員登録（下記を入力して下さい） </strong></h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
   <!--  <%#= f.label :名前（漢字） %><br /> -->
    <p> 名前（漢字） </p>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名" %>
  </div>

  <div class="field">
    <p> 名前フリガナ（全角カナ） </p>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "セイ" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "メイ" %>
  </div>

  <div class="field">
    <p> 電話番号（半角・ハイフン無し） </p>
    <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <p> メールアドレス </p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <span> パスワード（半角英数字6桁以上） </span>
    <% if @minimum_password_length %>
<!--     <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
    <% end %><br />
    <%= f.text_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <p> パスワード確認 </p>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "次へ"%>
  </div>
<% end %>

<%#= render "users/shared/links" %>

</div>