<!DOCTYPE html>
<html>
  <head>
    <title>NILE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="login_title">

  <h3>Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
     <!--  <%#= f.label :メールアドレス %><br /> -->
     <p> メールアドレス </p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス入力" %>
    </div>

    <div class="field">
     <!--  <%#= f.label :パスワード %><br /> -->
      <p> パスワード </p>
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード入力" %>
    </div>

  <!--   <%# if devise_mapping.rememberable? -%>
      <div class="field">
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
      </div>
    <%# end -%> -->

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>

    <a href="http://localhost:3000/users/sign_up"> 初めての方はこちら </a>
    <%#= render "users/shared/links" %>
  <% end %>


  </div>
  </body>
</html>