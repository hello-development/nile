<!DOCTYPE html>
<html>
	<head>
	    <title>NILE</title>
	    <%= csrf_meta_tags %>
	    <%= csp_meta_tag %>
	    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>

	<div class="users_data">
		<p>ユーザー検索</p>
		<div class=search_box>
	      <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	      <form method="get" action="#" class="search_container">
	        <input type="text" size="25" placeholder="ユーザー名">
	        <input type="submit" value="&#xf002">
	      </form>
	    </div>
	</div>

	<div>
		<table>
			<thead>
				<tr>
					<th> ID </th>
					<th colspan="2"> ユーザー名 </th>
					<th> メールアドレス </th>
					<th colspan="2"> </th>
					<th colspan="2"> </th>
				</tr>
			</thread>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td> <%= user.id %> </td>
					<td colspan="2"> <%= link_to "#{user.last_name}" + "#{user.first_name}", user_path(user.id) %> </td>
					<td> <%= user.email %> </td>
					<td colspan="2"> <%= link_to "編集", edit_user_path(user.id), class: 'btn btn-default' %> </td>
					<td colspan="2"> <%= link_to "退会", root_path, class: 'btn btn-default', method: :delete, "data-confirm" => "本当に退会させますか？" %> </td>
				</tr>
				<% end %>
			</tbody>>
		</table>
	</div>

	</body>
</html>