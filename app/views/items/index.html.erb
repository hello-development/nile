<h1>商品一覧</h1>
 <!-- link_to "商品詳細", items_path(items.id), class: ""  -->
<body>
  <div class='container'>
    <div class='row'>
      <div>
        <%= form_tag(items_path, method: "get") do %>
        <%= label_tag :item_name, "シングル/アルバム名" %><br><%= text_field_tag :item_name, params[:item_name] %><%= submit_tag "検索" %><br>
        <%= label_tag :ジャンル, "ジャンル" %>
        <%= select_tag :genre_id, options_for_select(Item.genres), include_blank: true %>
        <%= submit_tag "絞り込み" %>
        <%= label_tag :"レーベル" %>
        <%= select_tag :label_id, options_for_select(Item.labels), include_blank: true %>
        <%= submit_tag "絞り込み" %>
        <% end %>
      </div>
      <div class="col-lg-9">
        <div class="col-lg-3">
          <div class="item-box">
          <% @items.each do |item| %>
                <dl>
                  <dt><%= link_to item_path(item.id) do %><%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg' %><% end %></dt>
                  <dd><%= item.item_name %></dd>
                  <dd><% @artists.each do |artist| %><% if item.artist_id == artist.id %><%= artist.artist_name %><% end %><% end %></dd>  
                  <dd><% @genres.each do |genre| %><% if item.genre_id == genre.id %><%= genre.genre_name %><% end %><% end %></dd>
                  <dd>￥<%= item.price %></dd>
                  <dd><%#= item.inventory %></dd>
                </dl>
          <% end %>
        </div>
      </div>
    </div>
      <div class="col-lg-3">
        <h3><br>いいねランキング</h3>
        <table  class="table-hover table">
          <tbody>
            <tr>
              <td>１</td>
              <td><%= image_tag('no_image100x100.jpg') %></td>
              <td>アーティスト名</td>
              <td></span>111</td>
              <td>ジャンル</td>
              <td>レーベル</td>
              <td><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></td>
              <td>レビュー</td>
            </tr>
            <tr>
              <td>２</td>
              <td><%= image_tag('no_image100x100.jpg') %></td>
              <td>アーティスト名</td>
              <td></td>
