
<div class="box">
	<div class='row'>
		<div class="col-md-8">
			<div  class="clearfix">
				<div class="artist_profile_box  clearfix">
					<%= attachment_image_tag @item, :item_image, :fill, 250, 250, format: 'jpeg', class: "artist_show_image" %>
					<div  class="item_contents">
						<h1> <%= @item.item_name %></h1>
						<h4>
							・<% @artists.each do |artist| %><% if @item.artist_id == artist.id %><%= artist.artist_name %><% end %><% end %>
							<span  class="artist_tag">
								<% @genres.each do |genre| %><% if @item.genre_id == genre.id %><%= genre.genre_name %><% end %><% end %>
							</span>
							<span  class="artist_tag">
								<% @labels.each do |label| %><% if @item.label_id == label.id %><%= label.label_name %><% end %><% end %>
							</span>
						</h4>
						<p> 価格　¥<%= @item.price %></p>
							<% if @item.inventory == 0 or nil %>
							<!-- 商品の在庫が０かnilの時 -->
								<p>この商品は売り切れです</p>
							<% else %>
								<p>在庫　<%= @item.inventory %></p>
							<% end %>
						<% if user_signed_in? %>
							<% if @item.favorited_by?(current_user) %>
								<%= render 'likes/like_destroy' %>
								<% else %>
								<%= render 'likes/like_create' %>
							<% end %>
							<% else %>
								<p>いいね<%= @item.likes.count %></p>
						<% end %>
						<%= form_for (@cart_item), url: carts_add_item_path(@item.id) do |f| %>
						<%= f.label :"数量を選ぶ" %>
						<%= f.number_field :units %>
						<%= f.submit 'カートに入れる' %><br>
						<% end %>
						<div  class="artist_contents_box directory">
							<p>・Description<br><%= @item.item_contents %></p>
						</div>
					</div>
				</div>

				<strong><div class="search-results"><%= notice %></div></strong>
				<div class="artist_item_box">
					<div class="directory">
						<% if user_signed_in? %>
						<p>レビュー<%= @item.reviews.count %>件<br>
							<% @item.reviews.each do |review| %>
							<!-- 日付 -->
							<%= review.created_at.strftime('%Y/%m/%d') %>
							<!-- 名前 -->
							<%= review.user.first_name %><br>
							<!-- コメント -->
							<%= review.comment %><br>
						</p>
								<% if review.user == current_user %>
									<%= link_to item_review_path(@item,review), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
										<button class="">削除</button><br>
									<% end %>
								<% end %>
							<% end %>

							<%= form_for [@item, @review] do |f| %>
							<%= f.text_area :comment, rows:'5', class: "",placeholder: "レビューを入力（購入者のみ表示）" %>
							<%= f.submit "送信する", class: "" %>
							<% end %>
						<% elsif admin_signed_in? %>
							<p>
								レビュー<%= @item.reviews.count %>件<br>
								<% @item.reviews.each do |review| %>
								<!-- 日付 -->
								<%= review.created_at.strftime('%Y/%m/%d') %>
								<!-- 名前 -->
								<%= review.user.first_name %><br>
								<!-- コメント -->
								<%= review.comment %>
								<%= link_to item_review_path(@item,review), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
									<button class="">削除</button><br>
								<% end %>
								<% end %>
							</p>
						<% else %>
							<p>
								レビュー<%= @item.reviews.count %>件<br>
								<% @item.reviews.each do |review| %>
								<%= review.created_at.strftime('%Y/%m/%d') %>
								<%= review.user.first_name %><br>
		    					<%= review.comment %><br>
		    				</p>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<h3> CD総合いいねランキング</h3>
			<div class="over_3">
				<table  class="table-hover table">
					<tbody>
						<% @rank.each.with_index(1) do |rank, i| %>
						<tr>
							<td><%= "#{i}位" %></td>
							<td><%= link_to item_path(rank.id) do %><%= attachment_image_tag rank, :item_image, :fill, 50, 50, format: 'jpeg' %><% end %></td>
							<td><%= rank.item_name %></td>
							<td><% @artists.each do |artist| %><% if rank.artist_id == artist.id %><%= artist. artist_name %><% end %><% end %></td>
							<td><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span><%= rank.likes.count %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
